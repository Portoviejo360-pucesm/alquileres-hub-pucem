# Backend Unificado - Variables de Entorno

# Puerto del servidor unificado
PORT=8001

# Base de datos Supabase (compartida por todos los módulos)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (debe ser el mismo en todos los módulos)
JWT_SECRET=tu-secret-key-super-seguro

# CORS - URL del frontend
FRONTEND_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3000"

# SUPABASE (requerido por módulo de reportes)

SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Ambiente
NODE_ENV=development

# Logs
LOG_LEVEL=info
